<?xml version="1.0" encoding="utf-8" ?>
<Directives>
	<Application>
		<!-- Assembly sử dụng Resource -->
		<Assembly Name="System.Resources.Extensions">
			<Type Name="System.Resources.Extensions.RuntimeResourceSet" Dynamic="Required All" />
			<Type Name="System.Resources.Extensions.DeserializingResourceReader" Dynamic="Required All" />
		</Assembly>

		<!-- Bitmap -->
		<Assembly Name="System.Drawing">
			<Type Name="System.Drawing.Bitmap" Dynamic="Required All" />
		</Assembly>

		<!-- Các assembly dùng reflection hoặc bị trim -->
		<Assembly Name="System.Private.CoreLib" Dynamic="Required All" />
		<Assembly Name="mscorlib" Dynamic="Required All" />
		<Assembly Name="SunnyUI" Dynamic="Required All" />
		<Assembly Name="AutoAndroid" Dynamic="Required All" />
		<Assembly Name="Sunny.Subdy.UI" Dynamic="Required All" />
	</Application>
</Directives>
